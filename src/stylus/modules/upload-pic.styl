.upload-pic
  border-radius 2px
  overflow hidden
  position relative
  box-shadow 0 1px 4px 0 rgba(0, 0, 0, .15)
  &:hover
    .tap-wrapper
      opacity 1
.tap-wrapper
  opacity 0
  transition opacity .3s ease
  position absolute
  display flex
  flex-direction column
  top 0
  left 0
  color #ffffff
  font-size 12px
  line-height 16px
  width 100%
  height 100%
  background rgba(18, 18, 18, .5)
  label
  .back-default
    user-select none
    cursor pointer
.upload-pic.is-normal
  width 88px
  height 88px
  text-align center
  img
    width 100%
    height 100%
  input
    display none
  .tap-wrapper
    justify-content center
  label
    &.without-default
      margin-bottom 0
      &::after
        display none
    margin-bottom 21px
    position relative
    &::after
      content ''
      display block
      position absolute
      width 12px
      border 1px solid rgba(255,255,255,0.20)
      bottom -10px
      left 50%
      margin-left -6px
